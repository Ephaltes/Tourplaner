<UserControl x:Class="frontend.Views.UpSertRouteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:frontend.Views"
             xmlns:constants="clr-namespace:frontend"
             xmlns:navigation="clr-namespace:frontend.Navigation"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1150">


    <UserControl.Resources>
      

    </UserControl.Resources>

    <Grid>
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"  />
                <ColumnDefinition Width="100*"  />
                <ColumnDefinition Width="50*"  />
            </Grid.ColumnDefinitions>



            <Border Grid.Column="1"
					CornerRadius="20" 
					Background="{x:Static constants:Constants.SideMenuColor}">

                <ScrollViewer>
                    <Grid Margin="20" ScrollViewer.CanContentScroll="True">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="70" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="45" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="45" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="45" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="300" />
                            <RowDefinition Height="300" />
                            <RowDefinition Height="50" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10*" />
                                <ColumnDefinition Width="100*"/>
                                <ColumnDefinition Width="10*"/>
                            </Grid.ColumnDefinitions>


                            <Button Grid.Column="0" 
                                    Style="{StaticResource BackButton}"
                                      Command="{Binding RelativeSource={RelativeSource FindAncestor, 
										AncestorType={x:Type Window}}, 
										Path=DataContext.UpdateCurrentViewModelCommand}"
                                CommandParameter="{x:Static navigation:ViewType.Home }" >
                                <Button.Background>
                                <ImageBrush   ImageSource="../icons/back-arrow.png" 
                                   Stretch="None" />
                                </Button.Background>
                            </Button>

                            <Label Grid.Column="1" 
                           Style="{DynamicResource Heading}"
                           HorizontalAlignment="Center"
                           Content="Neue Route hinzufügen">
                            </Label>
                        </Grid>
                       

                        <Label Grid.Row="1"
                           Style="{StaticResource subHeading}"
                           Content="Title" />
                        <TextBox Grid.Row="2"
                           Style="{StaticResource TextInput}"
                           Tag="Title" />


                        <Label Grid.Row="3"
                           Style="{StaticResource subHeading}"
                           Content="Start" />
                        <TextBox Grid.Row="4"
                           Style="{StaticResource TextInput}"
                           Tag="Start" />


                        <Label Grid.Row="5"
                           Style="{StaticResource subHeading}"
                           Content="Stop" />
                        <TextBox Grid.Row="6"
                           Style="{StaticResource TextInput}"
                           Tag="Goal" />


                        <Label Grid.Row="7"
                           Style="{StaticResource subHeading}"
                           Content="Beschreibung" />

                        <TextBox Grid.Row="8"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             AcceptsTab="True"
                             SpellCheck.IsEnabled="True"
                             VerticalContentAlignment="Top"
                             Style="{StaticResource TextInput}"
                             Tag="Description" />

                        <!-- <TextBox Grid.Row="9" -->
                        <!--      TextWrapping="Wrap" -->
                        <!--      AcceptsReturn="True" -->
                        <!--      AcceptsTab="True" -->
                        <!--      SpellCheck.IsEnabled="True" -->
                        <!--      VerticalContentAlignment="Top" -->
                        <!--      Style="{StaticResource TextInput}" -->
                        <!--      Tag="Image" /> -->

                        <Border Grid.Row="9" CornerRadius="4" Margin="0,10,0,10">
                            <Border.Background>
                                <ImageBrush ImageSource="http://chriscavanagh.files.wordpress.com/2006/12/chriss-blog-banner.jpg" Stretch="Fill" />
                            </Border.Background>
                        </Border>

                        <!-- TODO: Image Tag -->
                        
                        <Button Grid.Row="10"
                                HorizontalAlignment="Right"
                                Width="100"
                                Margin="5"
                                Style="{DynamicResource CommandButton}"
                                Content="Speichern"/>
                    </Grid>
                </ScrollViewer>
            </Border>

            <!--<Border Grid.Column="2"
					CornerRadius="20" 
					Background="{x:Static constants:Constants.SideMenuColor}">

                <Grid>
                    <Label Content="Image"/>
                </Grid>
            </Border>-->
        </Grid>
    </Grid>
</UserControl>
