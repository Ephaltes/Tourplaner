<Window x:Class="frontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:frontend.ViewModels"
        xmlns:navigation="clr-namespace:frontend.Navigation"
        xmlns:views="clr-namespace:frontend.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ContentControl Content="{Binding CurrentViewModel }">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type local:DefaultViewModel}">
                    <views:DefaultView></views:DefaultView>
                </DataTemplate>
        
                <DataTemplate DataType="{x:Type local:TestViewModel}">
                    <views:TestView></views:TestView>
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>
        <Button Content="Switch to TestView" Command="{Binding UpdateCurrentViewModelCommand}" CommandParameter="{x:Static navigation:ViewType.Test}" Margin="64,244,64,18" />
    </Grid>
</Window>
